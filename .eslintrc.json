{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "ignorePatterns": ["dist"],
  "env": {
    "es6": true,
    "browser": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": ["@typescript-eslint/eslint-plugin"],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
