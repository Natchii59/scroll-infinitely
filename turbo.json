{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["typecheck"]
    },
    "test": {
      "dependsOn": ["lint", "build"]
    },
    "typecheck": {}
  }
}
