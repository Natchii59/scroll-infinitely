{
  "name": "scroll-infinitely",
  "description": "A lightweight, dependency-free TypeScript library for easy infinite scrolling page creation.",
  "version": "0.2.1",
  "license": "MIT",
  "author": {
    "name": "Natchi",
    "email": "contact@natchi.fr",
    "url": "https://natchi.fr"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint . --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/jest-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "eslint": "^8.57.0",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  },
  "peerDependencies": {
    "@types/react": "*",
    "@types/react-dom": "*",
    "react": "^18.0",
    "react-dom": "^18.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    },
    "@types/react-dom": {
      "optional": true
    }
  },
  "homepage": "https://github.com/Natchii59/scroll-infinitely",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Natchii59/scroll-infinitely.git"
  },
  "bugs": {
    "url": "https://github.com/Natchii59/scroll-infinitely/issues"
  },
  "keywords": [
    "react",
    "infinite",
    "scroll",
    "react-component"
  ]
}
