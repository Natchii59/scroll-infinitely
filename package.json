{
  "name": "scroll-infinitely",
  "description": "A lightweight, dependency-free TypeScript library for easy infinite scrolling page creation.",
  "version": "0.2.1",
  "license": "MIT",
  "author": {
    "name": "Natchi",
    "email": "contact@natchi.fr",
    "url": "https://natchi.fr"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "scripts": {
    "prepare": "husky",
    "build": "tsup",
    "clean": "rm -rf dist",
    "typecheck": "tsc",
    "lint": "eslint src --ext .ts,.tsx --config .eslintrc.json --cache",
    "format": "prettier --write .",
    "format:check": "prettier --check src --cache",
    "version": "changeset version",
    "release": "pnpm run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^19.2.2",
    "@commitlint/config-conventional": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  },
  "peerDependencies": {
    "@types/react": "*",
    "@types/react-dom": "*",
    "react": "^18.0",
    "react-dom": "^18.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    },
    "@types/react-dom": {
      "optional": true
    }
  },
  "homepage": "https://github.com/Natchii59/scroll-infinitely",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Natchii59/scroll-infinitely.git"
  },
  "bugs": {
    "url": "https://github.com/Natchii59/scroll-infinitely/issues"
  },
  "keywords": [
    "react",
    "infinite",
    "scroll",
    "react-component"
  ]
}
